                  +top('1&nbsp;061&nbsp;491 новое место', 'inline mr', 'в&nbsp;общеобразовательных организациях', 'inline', '')

         +headline( 'blue-dark', 'ensuring ', 'обеспечение работы', 'единой федеральной системы научно&ndash;методического сопровождения педагогических работников и&nbsp;управленческих кадров, в&nbsp;том числе центров непрерывного повышения профессионального мастерства педагогических работников в&nbsp;субъектах Российской Федерации.')
         section( aria-label='Перечень объектов, обеспечивающие работу проекта' ).info_block__container
            .wrapper.mb2
               .info_block__content
                  +top( '283', 'inline mr', 'консультационных центра (службы) психолого&ndash;педагогической, диагностической и&nbsp;консультативной помощи родителям с&nbsp;детьми дошкольного возраста', 'inline', '')
                  +top( '28%', '', 'штатных педагогов&ndash;психологов образовательных организаций, повысивших квалификацию', '', '')
                  +top( '20 МИЛЛИОНОВ УСЛУГ', '', 'психолого&ndash;педагогической, методической и&nbsp;консультативной помощи будут оказаны родителям', '', '')
                  +top( '3&nbsp;350 УЧИТЕЛЕЙ,', '', 'прибывших на&nbsp;работу в&nbsp;сельскую местность, получивших единовременную финансовую поддержку', '', '')
                  +top( '37&nbsp;000 ПРЕПОДАВАТЕЛЕЙ', '', 'общеобразовательных дисциплин в&nbsp;профессиональных образовательных организациях, которые прошли повышение квалификации', '', '')
               .line_blue
               .info_block__more
                  span Благодаря реализации федерального проекта к&nbsp;2024 году будут обновлены
                  b.ml содержание и&nbsp;технологии преподавания общеобразовательных программ, в&nbsp;том числе общеобразовательных дисциплин в&nbsp;профессиональных образовательных организациях

         include ../../assets/jade/content/pages/__deadline
         +deadline( '01.01.2019', '30.12.2024', '"Современная школа"')

         include ../../assets/jade/content/pages/__person
         section( aria-label='Руководитель проекта "Современная школа"' ).person__container
            .wrapper.mb6
               .person__holder
                  +person( 'Руководитель', 'Васильева', 'Татьяна', 'Викторовна', 'заместитель Министра просвещения Российской Федерации', 'vasieva')

         include ../../assets/jade/content/pages/__sources
