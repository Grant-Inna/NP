            .wrapper
               .sources__content.inner
                  .sources__title
                     .sources__text.title Источники финансирования проекта
                     .sources__icon
                  .sources__holder
                     +sources( 'Федеральный<br>бюджет', '559,6')
                     +sources( 'Из них передано субъектам<br>Российской Федерации', '541,2 ')


