                  +top( '1&nbsp;660&nbsp;000 ЧЕЛОВЕК,', 'inline mr', 'участвующих во&nbsp;всероссийских, окружных и&nbsp;межрегиональных мероприятиях патриотической направленности, в&nbsp;том числе дети и&nbsp;молодежь', 'inline', 'half')
                  +top( '600&nbsp;000 УЧАСТНИКОВ МЕРОПРИЯТИЙ', '', 'в&nbsp;рамках системы межпоколенческого взаимодействия и&nbsp;обеспечения преемственности поколений', '', 'half' )
                  +top( '150 МЕРОПРИЯТИЙ,', '', 'направленных на&nbsp;популяризацию отечественной истории в&nbsp;Российской  Федерации и&nbsp;за&nbsp;рубежом', '', '')
